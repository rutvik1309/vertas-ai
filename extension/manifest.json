{
  "manifest_version": 3,
  "name": "Veritas AI - News Fact Checker",
  "version": "1.3.0",
  "description": "AI-powered news fact-checking and analysis tool with web search capabilities",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
            "host_permissions": [
            "http://127.0.0.1:5005/*",
            "http://localhost:5005/*",
            "https://*.onrender.com/*",
            "https://vertas-ai.onrender.com/*"
          ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Veritas AI",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["icon.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
  