{
  "manifest_version": 3,
  "name": "Veritas AI - News Fact Checker",
  "version": "2.0.0",
  "description": "AI-powered news fact-checking and analysis tool with web search capabilities",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "http://127.0.0.1:10000/*",
    "http://localhost:10000/*",
    "https://*.onrender.com/*",
    "https://veritas-ai.onrender.com/*"
  ],
  "action": {
    "default_title": "Veritas AI",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["icon.png", "popup.html", "popup.css", "popup.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
  